import datetime

def day(num):
    if(num-1 == -1):
        return 6
    else:
        return (num-1)

hari = ['Senin', 'Selasa', 'Rabu', 'kamis', 'jumat', 'Sabtu', 'Minggu']

date = datetime.date.today()

Ntoday = date.weekday()
Nyesterday = day(Ntoday)

# print('Tahun ini:', str(date)[0:4])
print('Tanggal sekarang:', date, '\nHari ini:', hari[Ntoday], '\nHari kemarin:', hari[Nyesterday])